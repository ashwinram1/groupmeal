<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Groupmeal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Set the primary color (e.g., action bar background) to white -->
        <item name="colorPrimary">@color/black</item>
        <!-- Primary Variant can be white as well -->
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Text/icons on primary (in the action bar) will be black -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Set secondary color (used for accents) to black -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <!-- Text/icons on secondary backgrounds will be white -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Change the status bar color to black (if desired) -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Set the overall window background to white -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorLink">@android:color/holo_blue_dark</item>
    </style>
    <style name="Widget.Groupmeal.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
    </style>
    <style name="Widget.Groupmeal.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>